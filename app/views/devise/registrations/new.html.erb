<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
	<div class="row">
	  <div class="form-group col-xs-2">
	  	<div>
	    <%=f.label :name%></br>
	    <%=f.text_field :name, autofocus: true %><br/>
  	</div>
	  	<%= f.label :email %>
	  	<%= f.email_field :email,class:"form-control input-sm col-xs-2", placeholder:"Enter Text here"%>
		</div>
	</div>
	<div class="row">
		<div class="form-group col-xs-2">
			<div><%= f.label :password %>
			    <%= f.password_field :password, autocomplete: "off" ,class:"form-control input-sm col-xs-2"%>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="form-group col-xs-2">
		  <div><%= f.label :password_confirmation %>
		    <%= f.password_field :password_confirmation, autocomplete: "on" ,class:"form-control input-sm col-xs-2"%>
		  </div>
		</div>
	</div>

  <div class="row">
		<div class="form-group col-xs-2">

	  	<%= f.submit "Sign up",class:"btn btn-primary" %>
	  </div>
	</div>

<% end %>

<%= render "devise/shared/links" %>
